{
  "name": "youtube 字幕拡張機能",
  "version": "1.0",
  "description": "字幕別窓",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "contextMenus",
    "management"
  ],
  "content_scripts": [
    {
      "matches": ["*://youtube.com/*"],
      "js": ["./js/content.js"]
    }
  ],
  "background": {
    "scripts": ["./js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "説明",
    "default_icon": {
      "16": "images/icon.png",
      "24": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "24": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png"
  },
  "manifest_version": 2
}
