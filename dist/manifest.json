{
  "name": "Youtube Subtitle Download",
  "version": "1.0",
  "description": "Youtube Subtitle Download",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "downloads",
    "management"
  ],
  "content_scripts": [
    {
      "matches": [ "http://*.youtube.com/*", "https://*.youtube.com/*"],
      "js": ["./js/content.js"]
    }
  ],
  "background": {
    "scripts": ["./js/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Youtube Subtitle Download",
    "default_popup": "./html/popup.html",
    "default_icon": {
      "16": "images/icon.png",
      "24": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png"
    }
  },
  "icons": {
    "16": "images/icon.png",
    "24": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png"
  },
  "manifest_version": 2
}